{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "tsBuildInfoFile": ".cache/.tsbuildinfo",
    "incremental": true,
    "declaration": true,
    "declarationDir": "dist",
    "isolatedModules": true,
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "preserveWatchOutput": true
  },
  "include": ["./src/**/*.ts"]
}
